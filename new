<script>
        $(document).ready(function() {

            var tofix1_height = $('#tofix1').position().top; //Reserve the original height

            $(window).scroll(function() {
            
            var document_height = $(document).height() - $(window).height();
                var window_width = $(window).width();
                var scroll = $(window).scrollTop();
                console.log(scroll);

                var new_width = scroll / document_height * window_width;
                $('#moved').css({
                    'width': new_width
                });

                if (scroll >= tofix1_height) {
                    $('#tofix1').addClass('fixed');
                } else {
                    $('#tofix1').removeClass('fixed');
                }


            });
        });
 
      </script>  
<script>
        $(function() {
            var doch = $(document).height();
            var winh = $(window).height();
            
            console.log("doch/winh: " + doch + "/" + winh);
            
            var nimgs = 5;
            var scrollheight = (doch - winh) / nimgs;
            var arr = [0];
            var srcs = [];
           
            for (var i = 0; i < nimgs; i++) {
                arr.push((i + 1) * scrollheight);
                srcs.push("assets/real" + (i + 1) + ".jpg");
            }
            
            
            console.log(arr);

            $(window).scroll(function() {
                var scroll_position = $(document).scrollTop();
                for (i = 0; i < arr.length - 1; i++) {
                    if (arr[i] < scroll_position && arr[i + 1] > scroll_position) {
                        console.log(srcs[i]);
                        $('#animation').attr("src", srcs[i]);
//                        $('#animation').animate({src:srcs[i]}, 300);
                    }
                }

            });
        });
     
   </script> 
   
    
    
